{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% extends "layouts/prototypeLayout.njk" %}

{% block form %}

  <span class="govuk-caption-l">Someone to keep an eye on you</span>

  {{ govukRadios({
    idPrefix: "keep-eye-on-you-choice",
    name: "keep-eye-on-you-choice",
    fieldset: {
      legend: {
        text: "Do you need someone to keep an eye on you during the day?",
        isPageHeading: true,
        classes: "govuk-fieldset__legend--l"
      }
    },
    errorMessage: data.validation['keep-eye-on-you-choice'].error,
    items: [
      {
        value: "yes",
        text: "Yes",
        checked: true if data["keep-eye-on-you-choice"] === "yes"
      },
      {
        value: "no",
        text: "No",
        checked: true if data["keep-eye-on-you-choice"] === "no"
      }
    ]
  }) }}
{% endblock %}

{% block postForm %}
    {% include './macros/assisted-digital-details.njk' %}
{% endblock %}