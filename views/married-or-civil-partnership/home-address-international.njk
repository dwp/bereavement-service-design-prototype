{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}

{% extends "layouts/prototypeLayout.njk" %}

{% block form %}

  {% call govukFieldset({
    legend: {
      text: "What is your home address?",
      classes: "govuk-fieldset__legend--l",
      isPageHeading: true
    }
  }) %}

  <p class="govuk-hint">Make sure you enter the address of the person who is claiming Attendance Allowance.</p>

  <div class="govuk-!-padding-bottom-3"></div>

  {{ govukInput({
    label: {
      text: "Address line 1",
      classes: "govuk-body",
      isPageHeading: true
    },
    errorMessage: data.validation['home-address-international-line-one'].error,
    id: "home-address-international-line-one",
    name: "home-address-international-line-one",
    value: data["home-address-international-line-one"], 
    autocomplete: "home-address-international-line-one"
  }) }}

  {{ govukInput({
    label: {
      text: "Address line 2 (optional)",
      classes: "govuk-body",
      isPageHeading: true
    },
    id: "home-address-international-line-two",
    name: "home-address-international-line-two",
    value: data["home-address-international-line-two"], 
    autocomplete: "home-address-international-line-two"
  }) }}

  {{ govukInput({
    label: {
      text: "Town or city", 
      isPageHeading: true
    },
    classes: "govuk-!-width-two-thirds",
    errorMessage: data.validation['home-address-international-town'].error,
    id: "home-address-international-town",
    name: "home-address-international-town",
    value: data["home-address-international-town"], 
    autocomplete: "home-address-international-town"
  }) }}

  {{ govukInput({
    label: {
      text: "Postcode (optional)", 
      isPageHeading: true
    },
    classes: "govuk-input--width-10",
    id: "home-address-international-postcode",
    name: "home-address-international-postcode",
    value: data["home-address-international-postcode"],
    autocomplete: "home-address-international-postcode"
  }) }}

  {{ govukInput({
    label: {
      text: "Country", 
      isPageHeading: true
    },
    classes: "govuk-!-width-two-thirds",
    errorMessage: data.validation['home-address-international-country'].error,
    id: "home-address-international-country",
    name: "home-address-international-country",
    value: data["home-address-international-country"], 
    autocomplete: "home-address-international-country"
  }) }}

  <div class="govuk-!-padding-bottom-2"></div>

{% endcall %}
  
{% endblock %}

{% block postForm %}
    {% include './macros/assisted-digital-details.njk' %}
{% endblock %}