{% from "govuk/components/input/macro.njk" import govukInput %}

{% extends "layouts/prototypeLayout.njk" %}

{% block form %}
  <h1 class="govuk-heading-l">What is your full name?</h1>

  {{ govukInput({
    label: {
      text: "First name",
      classes: "govuk-label",
      isPageHeading: true
    },
    errorMessage: data.validation['first-name'].error,
    id: "first-name",
    name: "first-name",
    value: data["first-name"]
  }) }}

  {{ govukInput({
    label: {
      text: "Middle name (optional)",
      classes: "govuk-label",
      isPageHeading: true
    },
    errorMessage: data.validation['middle-name'].error,
    id: "middle-name",
    name: "middle-name",
    value: data["middle-name"]
  }) }}

  {{ govukInput({
    label: {
      text: "Last name",
      classes: "govuk-label",
      isPageHeading: true
    },
    errorMessage: data.validation['last-name'].error,
    id: "last-name",
    name: "last-name",
    value: data["last-name"]
  }) }}

{% endblock %}

{% block postForm %}
    {% include './macros/assisted-digital-details.njk' %}
{% endblock %}
