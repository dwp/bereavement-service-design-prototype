 {% from "./change-link.njk" import changeLink %}
{% from "./reword-date.njk" import rewordDate %}
{% macro checkAnswersDaySection(data) %}
    <section class="Your care needs during the day">
        <h2 class="govuk-heading-m">
            Your care needs during the day
        </h2>
        <dl class="govuk-summary-list govuk-!-margin-bottom-9">
            <div class="govuk-summary-list__row difficulties-day">
                <dt class="govuk-summary-list__key">
                    Activities you need help with
                </dt>
                <dd class="govuk-summary-list__value">
                    <ul class="govuk-list">
                        {% for item in data['day-difficulties'] %}
                            <li>
                                {{ item
								| replace("daytime-bed", "Getting in and out of bed")
								| replace("daytime-washing", "Washing or bathing")
								| replace("daytime-dressing", "Dressing or undressing yourself")
								| replace("daytime-moving", "Moving around indoors")
								| replace("stumbling-falling", "Stumbling or falling")
								| replace("daytime-toilet", "Using the toilet or managing incontinence")
								| replace("daytime-eating", "Eating or drinking")
								| replace("daytime-medication", "Taking medication or receiving treatment")
								| replace("daytime-hobbies", "Social activities")
								| replace("daytime-communication", "Communication")
								| replace("daytime-none", "None of these apply to me") }}
                            </li>
                        {% endfor %}
                    </ul>
                </dd>
                <dd class="govuk-summary-list__actions">
                    {{ changeLink('day-difficulties') }}
                </dd>
            </div>
        </dl>
    </section>
    {% if data["day-difficulties"] and data["day-difficulties"].includes("daytime-bed") %}
        <section class="Getting in and out of bed">
            <h2 class="govuk-heading-m">
                Getting in and out of bed
            </h2>
            <dl class="govuk-summary-list govuk-!-margin-bottom-9">
                <div class="govuk-summary-list__row bed-day">
                    <dt class="govuk-summary-list__key">
                        What difficulty do you have getting in and out of bed?
                    </dt>
                    <dd class="govuk-summary-list__value">
                        <ul class="govuk-list">
                            {% for item in data['bed-day'] %}
                                <li>
                                    {{ item
									| replace("getting-into-bed", "Getting into bed")
									| replace("getting-out-bed", "Getting out of bed")
									| replace("motivation-bed", "Forgetting or lacking the motivation to get up in the morning or go to bed at night")
                                    | replace("something-else-bed", "Something else")
                                    | replace("none", "I do not have difficulty getting in or out of bed") }}
                                </li>
                            {% endfor %}
                        </ul>
                    </dd>
                    <dd class="govuk-summary-list__actions">
                        {{ changeLink('bed-day') }}
                    </dd>
                </div>
                {% if data['something-else-explain-bed'] %}
                    <div class="govuk-summary-list__row bed-day">
                        <dt class="govuk-summary-list__key">
                            Tell us what you have difficulty with getting in or out of bed
                        </dt>
                        <dd class="govuk-summary-list__value">
                            {{ data['something-else-explain-bed'] | capitalize }}
                        </dd>
                        <dd class="govuk-summary-list__actions">
                            {{ changeLink('bed-day') }}
                        </dd>
                    </div>
                {% endif %}
                {% if data['bed-day'] != "none" %}
                    <div class="govuk-summary-list__row bed-day-why">
                        <dt class="govuk-summary-list__key">
                            How do you manage to get in or out of bed?
                        </dt>
                        <dd class="govuk-summary-list__value">
                            <ul class="govuk-list">
                                {% for item in data['bed-day-why'] %}
                                    <li>
                                        {{ item
                                        | replace("restricted-movement", "I have restricted movement due to my pain or disability")
                                        | replace("hold-on-to-things", "I hold on to things to get in or out of bed")
                                        | replace("get-in-out-bed-safely", "I cannot get in or out of bed safely")
                                        | replace("encouragement", "I need to be encouraged to get in or out of bed")
                                        | replace("help-bed", "Someone has to physically help me get in or out of bed")
                                        | replace("sleep-chair", "I sleep in a chair at night instead of going to bed")
                                        | replace("bed-day-why-something-else", "Something else") }}
                                    </li>
                                {% endfor %}
                            </ul>
                        </dd>
                        <dd class="govuk-summary-list__actions">
                            {{ changeLink('bed-day-why') }}
                        </dd>
                    </div>
                    {% if data['something-else-bed-day-why-explain'] %}
                        <div class="govuk-summary-list__row bed-day-why">
                            <dt class="govuk-summary-list__key">
                                Tell us how you manage to get in or out of bed
                            </dt>
                            <dd class="govuk-summary-list__value">
                                {{ data['something-else-bed-day-why-explain'] | capitalize }}
                            </dd>
                            <dd class="govuk-summary-list__actions">
                                {{ changeLink('bed-day-why') }}
                            </dd>
                        </div>
                    {% endif %}
                    <div class="govuk-summary-list__row ">
                        <dt class="govuk-summary-list__key">
                            Do you need to go back to bed during the day?
                        </dt>
                        <dd class="govuk-summary-list__value">
                            {{ data['return-bed-day'] | capitalize }}
                        </dd>
                        <dd class="govuk-summary-list__actions">
                            {{ changeLink('return-bed-day') }}
                        </dd>
                    </div>
                    {% if data['return-bed-day'] == "yes" %}
                        <div class="govuk-summary-list__row day-frequency">
                            <dt class="govuk-summary-list__key">
                                On average, how many times a day do you need to go back to bed?
                            </dt>
                            <dd class="govuk-summary-list__value">
                                {{ data['return-bed-day-times'] }}
                            </dd>
                            <dd class="govuk-summary-list__actions">
                                {{ changeLink('return-bed-day') }}
                            </dd>
                        </div>
                    {% endif %}
                {% endif %}
            </dl>
        </section>
    {% endif %}
    {% if data["day-difficulties"] and data["day-difficulties"].includes("daytime-washing") %}
