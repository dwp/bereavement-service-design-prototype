                        </dt>
                        <dd class="govuk-summary-list__value">
                            <ul class="govuk-list">
                                {% for item in data['dress-day-why'] %}
                                    <li>
                                        {{ item
                                        | replace("breathless", "I get breathless")
                                        | replace("restricted-movement", "I have restricted movement due to pain")
                                        | replace("long-time-dress", "It takes me a long time to get dressed or undressed")
