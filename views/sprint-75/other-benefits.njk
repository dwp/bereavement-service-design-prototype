{% from "govuk/components/checkboxes/macro.njk"    import govukCheckboxes %}

{% extends "layouts/prototypeLayout.njk" %}

{% block form %}
  {{ govukCheckboxes
    ({
      idPrefix: "other-benefits",
      name: "other-benefits",
      fieldset: {
        legend: {
          text: "Are you or your partner geting, or waiting to hear about, any of these benefits?",
          isPageHeading: true,
          classes: "govuk-fieldset__legend--l govuk-!-margin-bottom-7"
        }
      },
      hint: {
        text: "Select all that apply."
      },
      errorMessage: data.validation['other-benefits'].error,
      items: [
      {
        value: "universal-credit",
        text: "Universal Credit",
        checked: true if data["other-benefits"] and data["other-benefits"].includes("universal-credit")
      },
      {
        value: "income-support",
        text: "IncomeÂ Support",
        checked: true if data["other-benefits"] and data["other-benefits"].includes("income-support")
      },
      {
        value: "income-based-jobseekers-allowance",
        text: "Income-based Jobseeker's Allowance",
        checked: true if data["other-benefits"] and data["other-benefits"].includes("income-based-jobseekers-allowance")
      },
      {
        value: "income-related-employment-support-allowance",
        text: "Income-related Employment and Support Allowance",
        checked: true if data["other-benefits"] and data["other-benefits"].includes("income-related-employment-support-allowance")
      },
      {
        value: "pension-credit",
        text: "Pension Credit",
        checked: true if data["other-benefits"] and data["other-benefits"].includes("pension-credit")
      },
      {
        value: "working-tax-credit",
        text: "Working Tax Credit including a disability or severe disability element",
        checked: true if data["other-benefits"] and data["other-benefits"].includes("working-tax-credit")
      },
      {
        value: "child-tax-credit",
        text: "Child Tax Credit",
        checked: true if data["other-benefits"] and data["other-benefits"].includes("child-tax-credit")
      },
      {
        value: "housing-benefit",
        text: "Housing benefit",
        checked: true if data["other-benefits"] and data["other-benefits"].includes("housing-benefit")
      },
      {
        value: "support-mortgage-interest",
        text: "Support for Mortgage Interest",
        checked: true if data["other-benefits"] and data["other-benefits"].includes("support-mortgage-interest")
      },
      {
        divider: "or"
      },
      {
        value: "no-other-benefit",
        text: "None of these benefits",
        behaviour: "exclusive",
        checked: true if data["other-benefits"] and data["other-benefits"].includes("no-other-benefit")
      }]
    })
  }}
{% endblock %}

{% block postForm %}
    {% include './macros/assisted-digital-details.njk' %}
{% endblock %}