{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "../macros/phase-button.njk" import phaseButton %}

{% extends "layouts/prototypeLayout.njk" %}

{% block pageTitle %}
  Your health condition or disability
{% endblock %}

{% block form %}

  <h1 class="govuk-heading-l">
    Your health condition or disability
  </h1>

  <p class="govuk-body">
    Add the name of your health condition or disability.
  </p>

  <div class="govuk-!-margin-bottom-8">
    {{ govukInput({
      errorMessage: data.validation['illness-disability-manual'].error,
      id: "illness-disability-manual",
      name:  "illness-disability-manual",
      label: {
        text: "Name of condition",
        classes: "govuk-label--s",
        isPageHeading: false
      }
    }) }}
  </div>

  {% block formButton %} 
  {% endblock %}

  <div class="govuk-button-group">
    {{ phaseButton(data, "Add condition") }}
  </div>

{% endblock %}

{% block postForm %}
    {% include './macros/assisted-digital-details.njk' %}
{% endblock %}

